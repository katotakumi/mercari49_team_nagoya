.wrapper
  = render "shared/header"
  .main
    .main-slide
      =image_tag("slide1.png", width:"1440")
    .main-item
      ピックアップカテゴリー
      .main-item-select
        .main-item-select__name
          レディース新着アイテム
        .main-item-all
          .main-item-one
            - @exhibitions.each do |exhibition|
              = link_to '詳細', "/tops/#{exhibition.id}", method: :get
            .main-item-one__image
              =image_tag("akabeko.png", width:"200")
            .main-item-one__textbox
              .main-item-one__text
                赤べこ
                .main-item-one__prices
                  .main-item-one__price
                    ¥20,000
                  .main-item-one__good
                    =fa_icon'heart' , class: 'icon'
                  .main-item-one__tax
                    (税込)
        .main-item-one-all-view
          すべての商品を見る
  = render "shared/application"
  = render "shared/footer"
.sell-button
  = button_to "出品", {controller: 'tops', action: 'new'}, {method: :get}
  .sell-button-text
    出品
  .camera
    =fa_icon'camera', class: 'icon'
